#Google News create checkboxes
javascript:(function(){var results=document.querySelectorAll('.n0jPhd');results.forEach(function(result){var checkbox=document.createElement('input');checkbox.type='checkbox';checkbox.style.marginRight='10px';checkbox.style.width='20px';checkbox.style.height='20px';result.prepend(checkbox);});var links=document.querySelectorAll('a');links.forEach(function(link){link.addEventListener('click', function(e){if (!e.target.matches('input[type="checkbox"]')){e.preventDefault();}});});var submitCheckedItems=function(){var checkedResults=document.querySelectorAll('.n0jPhd input[type="checkbox"]:checked');if(checkedResults.length===0){alert('No checkboxes checked');return;}checkedResults.forEach(function(checkbox,index){setTimeout(function(){var titleElement=checkbox.closest('.n0jPhd');if(titleElement){var title=titleElement.textContent.trim();var linkElement=titleElement.closest('.SoaBEf').querySelector('a.WlydOe');if(linkElement){var newsUrl=linkElement.href;var xhr=new XMLHttpRequest();xhr.open('POST','https://arreststories.com/ArrestStoriesComAddToDB.php',true);xhr.setRequestHeader('Content-Type','application/x-www-form-urlencoded');xhr.onreadystatechange=function(){if(xhr.readyState===4&&xhr.status===200){alert('Submitted: ' + newsUrl);}};xhr.send('Title='+encodeURIComponent(title)+'&URL='+encodeURIComponent(newsUrl));}}}, index * 1000);});};var submitButton=document.createElement('button');submitButton.textContent='Submit Checked Items';submitButton.style.position='fixed';submitButton.style.bottom='10px';submitButton.style.right='10px';submitButton.style.zIndex='1000';submitButton.onclick=submitCheckedItems;document.body.appendChild(submitButton);})();

#Google News submit checked url and title to remote site
javascript:(function(){var results=document.querySelectorAll('.n0jPhd input[type="checkbox"]:checked');if(results.length === 0){alert('No checkboxes checked');return;}results.forEach(function(checkbox,index){setTimeout(function(){var titleElement=checkbox.closest('.n0jPhd');if(titleElement){var title=titleElement.textContent.trim();var linkElement=titleElement.closest('.SoaBEf').querySelector('a.WlydOe');if(linkElement){var newsUrl=linkElement.href;var xhr=new XMLHttpRequest();xhr.open('POST','https://site.com/form.php',true);xhr.setRequestHeader('Content-Type','application/x-www-form-urlencoded');xhr.onreadystatechange=function(){if(xhr.readyState===4&&xhr.status===200){alert('Submitted: ' + newsUrl);}};xhr.send('Title='+encodeURIComponent(title)+'&URL='+encodeURIComponent(newsUrl));}}}, index * 1000);});})();
